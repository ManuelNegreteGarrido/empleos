<% if user_signed_in? %>
  <div class="main-wrapper jobapplication">
    <div class="row">
      <% @jobapplications.each do |jobapplication| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="image center-block">
            <%= link_to (image_tag jobapplication.squared_img, class:'img-fluid'), jobapplication_path(jobapplication) %>
          </div>
          <p class="text-end small text-muted mb-0">
            <%= time_ago_in_words jobapplication.created_at %>
          </p>
          <p class="description">
            <b>
              <%= jobapplication.user_name if jobapplication.user %>
            </b>
            <%= truncate(strip_tags(jobapplication.description.to_s), length: 70) %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="jumbotron text-center">
   <h1>BIENVENIDO A EMPLEOS</h1>
     <p>
       <%= link_to "Iniciar sesión", new_user_session_path, class: "btn btn-default btn-lg" %>
       <%= link_to "Regístrate", new_user_registration_path, class: "btn btn-primary btn-lg" %>
     </p>
  </div>
<% end %>